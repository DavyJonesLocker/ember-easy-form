<h2>Person form</h2>
<div id="teste">
{{#form-for model}}
  {{input firstName}}
  {{input lastName}}
  <input type="submit">
{{/form-for}}

<p class="bound-values">
  First name: <span class="first-name">{{model.firstName}}</span><br>
  Last name: <span class="last-name">{{model.lastName}}</span>
</p>

{{#if submitted}}
  <p class="form-submitted">Submitted!!</p>
{{/if}}
</div>